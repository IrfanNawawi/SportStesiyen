<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_news_detail"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_title_news_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_ipsum"
        android:textSize="18sp"
        android:fontFamily="@font/mulish_bold_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_date_news_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 days ago"
        android:fontFamily="@font/mulish_regular_400"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_news_detail"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_desc_news_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_ipsum"
        android:textSize="14sp"
        android:fontFamily="@font/mulish_semibold_600"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date_news_detail"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tv_content_news_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_ipsum"
        android:textSize="14sp"
        android:fontFamily="@font/mulish_semibold_600"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_news_detail"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_source_news_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content_news_detail"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_source_news_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:textColor="@color/white"
            android:padding="10dp"
            android:visibility="gone"
            android:maxLength="16"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/mulish_medium_500"
            android:background="@drawable/bg_btn_primary"
            android:layout_marginEnd="16dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_author_news_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:maxLength="16"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            android:textColor="@color/white"
            android:fontFamily="@font/mulish_medium_500"
            android:padding="10dp"
            android:background="@drawable/bg_btn_primary"
            android:textSize="12sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>